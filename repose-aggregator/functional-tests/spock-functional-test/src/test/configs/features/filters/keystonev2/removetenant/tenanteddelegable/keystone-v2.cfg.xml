<?xml version="1.0" encoding="UTF-8"?>
<keystone-v2 xmlns="http://docs.openrepose.org/repose/keystone-v2/v1.0">
    <delegating quality="0.7"/>
    <cache-settings>
        <timeouts>
            <token>600000</token>
            <group>600000</group>
        </timeouts>
    </cache-settings>
    <tenant-handling>
        <validate-tenant>
            <uri-extraction-regex>.*/servers/([-|\w]+)/?.*</uri-extraction-regex>
            <bypass-validation-roles>
                <role>service:admin-role1</role>
                <role>service:admin-role2</role>
            </bypass-validation-roles>
        </validate-tenant>
    </tenant-handling>
    <forward>
        <user-groups/>
    </forward>
    <identity-service username="admin_username"
                      password="admin_password"
                      uri="http://localhost:${identityPort}"/>
</keystone-v2>
